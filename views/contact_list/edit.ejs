<section class="portfolio" id="portfolio">
  <div class="container">
    <h2 class="text-center text-uppercase text-secondary mb-0">
      Business Contact
    </h2>
    <hr class="star-dark mb-5" />
    <% if (locals.messages && locals.messages.error) { %>
        <div class="alert alert-danger" role="alert"><%- messages.error %></div>
        <% } %>
    
        <div class="card">
            <div class="card-body">
                <form action="/contact_list/update/<%= id %>" method="post">
                    <div class="form-group">
                        <label>Name:</label>
                        <input type="text" class="form-control" id="name" name="name" required value="<%= locals.name  %>" autocomplete="off">
                    </div>
                    <div class="form-group">
                        <label>Email:</label>
                        <input type="text" class="form-control" id="email" name="email" required value="<%= locals.email %>" autocomplete="off">
                    </div>
                    <div class="form-group">
                        <label>Phone:</label>
                        <input type="text" class="form-control" id="phone"  name="phone" required value="<%= locals.phone %>" autocomplete="off">
                    </div>                    
                    <div class="form-group">
                        <input type="submit" class="btn btn-info" value="Update"/>
                        <button type="button" class="btn btn-danger" onclick="window.history.back();">Cancel</button>
                    </div>
                </form>
            </div>
        </div>
    
  </div>
</section>