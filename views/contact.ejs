
    <section id="contact">
      <div class="container">
        <h2 class="text-center text-uppercase text-secondary mb-0">
          Contact Me
        </h2>
        <hr class="star-dark mb-5" />
        <div class="row">
          <div class="col-lg mx-auto">
            <form
              name="sentMessage"
              id="contactForm"
              action="/thanks"
              method="POST"
            >
              <div class="control-group eachFormRow">
                
                  <label for="firstName">First Name: </label>
                  <input
                    class="form-contol"
                    id="firstName"
                    name="firstName"
                    type="text"
                    placeholder="First Name"
                    required
                  />
                  
              </div>

              <div class="control-group eachFormRow">
                
                  <label for="firstName">Last Name: </label>
                  <input
                    class="form-contol"
                    id="lastName"
                    name="lastName"
                    type="text"
                    placeholder="Last Name"
                    required
                  />
                  
              </div>

              <div class="control-group eachFormRow">
                
                  <label for="email">Email:</label>
                  <input
                    class="form-contol"
                    id="email"
                    name="email"
                    type="email"
                    placeholder="Email"
                    required
                  />
                
              </div>

              <div class="control-group eachFormRow">
                
                  <label for="phone">Contact Number:     </label>
                  <input
                    class="form-contol"
                    id="phone"
                    name="phone"
                    type="number"
                    placeholder="Phone"
                    required
                  />
                  
             
              </div>

              <div class="control-group eachFormRow">
               
                  <label for="phone">Message: </label>
                  <input
                    class="form-contol"
                    id="message"
                    name="message"
                    type="text"
                    placeholder="Message"
                    required
                  />
                  
               
              </div>
              <br />

              <div class="form-group">
                <button type="submit" class="btn btn-primary submit" btn-xl btn-block>
                  Send
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </section>
